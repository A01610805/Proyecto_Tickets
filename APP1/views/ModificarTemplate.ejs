<%- include('includes/head.ejs') %>

    <div class="container">

        <h3>Escoger Categor√≠a a Modificar</h3>
        <table class="highlight ">
            <thead class="white-text grey darken-3">
                <th>Categorias</th>
                <th></th>
            </thead>
            
        
            <% for (let categoria of categorias) { %>
                <% if ( categoria.disponible == 1) { %>
                    <tr>
                        <td class="">
                            <a href="/modificar_template/get_preg/<%= categoria.ID_categoria %>/<%= categoria.nombre_categoria %>">
                                <%= categoria.nombre_categoria %>
                            </a>
                        </td>
                        <td class="">
                            <form action="/modificar_template/delete_tem" method="post">
                                <button type="submit" href="" class=" tooltipped btn" data-position="bottom" data-tooltip="Eliminar template"><i class="material-icons">clear</i></button>
                                <input type="hidden" id="id" name="id" value="<%= categoria.ID_categoria %>">
                                <input type="hidden" id="nombre" name="nombre" value="<%= categoria.nombre_categoria %>">
                                <input type="hidden" id="tiempo" name="tiempo" value="<%= categoria.tiempo_estimado %>">
                            </form>
                            
                        </td>
                    </tr>
                    
                <% } %>
            <% } %>
            
        </table>

    </div>

    <%- include('includes/footer.ejs') %>