            <input type="text" id="Email" name="Email">
            <label for="password">Password: </label>
            <input type="password" id="password" name="password">
            <br><br>

            <div class="clearfix">
                <br><br>
                <input type="submit" value="Enviar">
                <br><br>
            </div>

            <p><a href="/users/login">Regresar a menú de login</a></p>

        </div>
