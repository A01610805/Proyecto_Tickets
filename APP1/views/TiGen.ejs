<%- include('includes/head.ejs') %>
    <!DOCTYPE html>
    <html>

    <head>
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--Import materialize.css-->
        <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />
        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    </head>
    <div class="container">

        <ul id="dropdown1" class=" hide-on-med-and-down dropdown-content">
            <% for (let categoria of categorias) { %>
                <li class="">
                    <a href="/generar_ticket/categoria/<%= categoria.ID_categoria %>" class="">
                        <%= categoria.nombre_categoria %>
                    </a>
                </li>
                <% } %>
        </ul>
        <nav class="grey darken-3">
            <div class="nav-wrapper">
                <li><a class="dropdown-trigger" href="#!" data-target="dropdown1">Cambiar Categoria<i class="material-icons right">arrow_drop_down</i></a></li>
            </div>
        </nav>
        <h4>Favor de llenar los siguientes campos</h4>
        <div class="form">
            <form action="" method="POST" id="form">
                <div class="grupo">
                    <input required id="titulo" name="titulo"><span class="barra"></span>
                    <label for="">Titulo</label>
                </div>
                <div class="grupo">
                    <input required id="descripcion" name="descripcion"><span class="barra"></span>
                    <label for="">Descripcion</label>
                </div>
                <%var i=1; %>
                    <% for (let pregunta of preguntas) { %>
                        <div class="grupo">
                            <%var nombre = "texto_respuesta"+i%>
                                <input required id="<%nombre%>" name="texto_respuesta"><span class="barra"></span>
                                <label href="/generar_ticket/pregunta/<%= pregunta.ID_categoria %>" for="ID_pregunta"><%= pregunta.texto_pregunta %></label>
                        </div>
                        <%i=i+1;%>
                            <% } %>
                                <br>

                                <button class="btn waves-effect waves-light grey dark-4" type="submit" name="action">Enviar
                                    <i class="material-icons right">send</i>
                                  </button>
                                <button class="btn waves-effect waves-light grey dark-4" type="submit" name="action">Cancelar
                                    <i class="material-icons right">send</i>
                                  </button>
            </form>
        </div>

    </div>

    <%- include('includes/footer.ejs') %>