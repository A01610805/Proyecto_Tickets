<%- include('includes/head.ejs') %>
    <!DOCTYPE html>
    <html>

    <head>
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--Import materialize.css-->
        <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />

        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    </head>

    <body>
        <div class="container">
            <h1>Tickets Activos</h1>
            <!-- Page Content goes here -->
            <ul class="collection">
                <!-- aqui se hace un for cada ticket -->
                <% for (let ticket of ticketss) { %>
                    <li class="collection-item">
                        <div class="col s12 m2">
                            <p class="z-depth-4">
                                <div class="card">
                                    <div class="card-content">
                                        <p id="titulo">
                                            <%= ticket.titulo %>
                                        </p>
                                    </div>
                                    <div class="card-tabs">
                                        <ul class="tabs tabs-fixed-width">
                                            <li class="tab"><a class="active" href="#test4">Descripcion</a></li>
                                            <li class="tab"><a href="#test5">Preguntas/Respuestas</a></li>
                                            <li class="tab"><a href="#test6">Comentarios</a></li>
                                        </ul>
                                    </div>
                                    <div class="card-content grey lighten-4">
                                        <div id="test4">
                                            <%= ticket.descripcion %>
                                        </div>
                                        <div id="test5">Test 2</div>
                                        <div id="test6">Test 3</div>
                                    </div>
                                </div>
                            </p>
                        </div>
                    </li>
                    <% } %>
            </ul>
            <!--JavaScript at end of body for optimized loading-->
            <script type="text/javascript" src="js/materialize.min.js"></script>
    </body>

    </html>
    <%- include('includes/footer.ejs') %>