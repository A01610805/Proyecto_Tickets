<%- include('includes/head.ejs') %>
    <!DOCTYPE html>
    <html>

    <head>
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--Import materialize.css-->
        <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />
        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    </head>

    <body>
        <style type="text/css">
            /* body {
                background-image: url("https://images.ecestaticos.com/LtUY2F-tA12ve8aGzYIVgoX8pJo=/0x0:2121x1414/1600x900/filters:fill(white):format(jpg)/f.elconfidencial.com%2Foriginal%2Fd9e%2F66d%2F793%2Fd9e66d793adbc994841e60850a17e61c.jpg");
            } */
            
            #global {
                height: 900px;
                width: 700px;
                border: 1px solid #ddd;
                background: grey;
                overflow-y: scroll;
                flex-wrap: wrap;
            }
            
            #global1 {
                height: 400px;
                width: 700px;
                border: 1px solid #ddd;
                background: grey;
                overflow-y: scroll;
                flex-wrap: wrap;
            }
            
            #mensajes {
                height: auto;
            }
            
            #titulo {
                font-family: 'Monaco';
                font-size: large;
            }
            
            #Tickets_Generados {
                display: inline-block;
                width: 750px;
                height: 50px;
            }
            
            #Mis_Tickets {
                position: absolute;
                top: 600;
                right: auto;
                display: inline-block;
                width: 100px;
                height: 50px;
            }
        </style>

        <div id="Tickets_Generados">
            <div id="global">
                <div id="mensajes">
                    <blockquote>
                        <h5 id="titulo">Tickets Generados</h5>
                    </blockquote>
                    <div class=" center">
                        <ul class="collection">
                            <!-- aqui se hace un for cada ticket -->
                            <% var i = 0; %>
                                <% for (let ticket of ticketss) { %>
                                    <li class="collection-item">
                                        <div class="col s12 m2">
                                            <p class="z-depth-4">
                                                <div class="card">
                                                    <div class="card-content">
                                                        <p id="titulo">
                                                            <%= ticket.titulo %>
                                                        </p>
                                                    </div>
                                                    <div class="card-tabs">
                                                        <ul class="tabs tabs-fixed-width">
                                                            <li class="tab"><a class="active" href="#test<%= i+1%>">Descripcion</a></li>
                                                            <li class="tab"><a href="#test<%= i+2%>">Preguntas/Respuestas</a></li>
                                                            <li class="tab"><a href="#test<%= i+3%>">Comentarios</a></li>
                                                        </ul>
                                                    </div>
                                                    <div class="card-content">
                                                        <div id="test<%= i+1%>">
                                                            <%= ticket.descripcion %>
                                                        </div>
                                                        <div id="test<%= i+2%>">
                                                            <%= ticket.ID_ticket %>
                                                        </div>
                                                        <div id="test<%= i+3%>">
                                                            <%= ticket.comentarios_solucion %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </p>

                                    </li>
                                    <% i=i+3 %>
                                        <% } %>
                        </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="Mis_Tickets">
            <div id="global1">
                <div id="mensajes">
                    <blockquote>
                        <h5 id="titulo">Mis Tickets</h5>
                    </blockquote>
                    <div class=" center">
                        <ul class="collection">
                            <!-- aqui se hace un for cada ticket -->
                            <% var z = 0; %>
                                <% for (let ticket2 of ticketss) { %>
                                    <li class="collection-item">
                                        <div class="col s12 m2">
                                            <p class="z-depth-4">
                                                <div class="card">
                                                    <div class="card-content">
                                                        <p id="titulo">
                                                            <%= ticket2.titulo %>
                                                        </p>
                                                    </div>
                                                    <div class="card-tabs">
                                                        <ul class="tabs tabs-fixed-width">
                                                            <li class="tab"><a class="active" href="#tests<%= z+1%>">Descripcion</a></li>
                                                            <li class="tab"><a href="#tests<%= z+2%>">Preguntas/Respuestas</a></li>
                                                            <li class="tab"><a href="#tests<%= z+3%>">Comentarios</a></li>
                                                        </ul>
                                                    </div>
                                                    <div class="card-content">
                                                        <div id="tests<%= z+1%>">
                                                            <%= ticket2.descripcion %>
                                                        </div>
                                                        <div id="tests<%=z+2%>">
                                                            <%= ticket2.ID_ticket %>
                                                        </div>
                                                        <div id="tests<%= z+3%>">
                                                            <%= ticket2.comentarios_solucion %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </p>

                                    </li>
                                    <% z=z+3 %>
                                        <% } %>
                        </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--JavaScript at end of body for optimized loading-->
        <script type="text/javascript" src="js/materialize.min.js"></script>
    </body>

    </html>
    <%- include('includes/footer.ejs') %>