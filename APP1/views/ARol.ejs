<%- include('includes/head.ejs') %>

    <div class="container">

        <h1 id="logo" class="center">Asignar rol</h1>

        <form action="/asignar_rol/post_rol/<%= id %>" method="POST" id="form" onsubmit="return validar()">

            <div style="background-color:aliceblue;padding: 12px;  padding-bottom: 50px; padding-left: 10px; padding-right: 10px;border-radius: 4%;">
                <h5 id="logo" class="center" for="">Información del usuario:</h5>
                <a id="logo" class="center" for="">Nombre del usuario:</a>
                <h6 class="center" for="">
                    <%=user.nombre%>
                        <%=user.apellido_paterno%>
                            <%=user.apellido_materno%>
                </h6>
                <a id="logo" class="center" for="">Correo electrónico:</a>
                <h6 class="center" for="">
                    <%=user.correo%>
                </h6>
                <a id="logo" class="center" for="">Rol actual:</a>
                <h6 class="center" for="">
                    <%=user.ID_rol%> -
                        <%=user.nombre_rol%>
                </h6>
                <div class="centers">
                    <select class="selectpicker" data-style="btn-info" name="rol_nuevo" id="asignacion">
                    <optgroup label="Select Table">
                        <option value="nulo" disabled selected>Elige tu opción</option>
                        <option name="table1" value="1">1 - Administrador</option>
                        <option name="table2" value="2">2 - Empleado de soporte</option>
                        <option name="table3" value="3">3 - Empleado general de Zebrands</option>
                    </optgroup>
                </select>
                </div>
                <div class="right">
                    <button id="logo" type="submit" class="waves-effect waves-light btn">Guardar</button>
                    <a id="logo" href="/buscar_usuario/busqueda" class="waves-effect waves-light btn">Cancelar</a>
                </div>
            </div>
            <br></br>
        </form>
    </div>

    <script>
        function validar() {
            var asignacion = document.getElementById("asignacion").value;
            if (asignacion=="nulo"){
                alert("Selecciona una opción válida");
                return false;
            }
            else if(asignacion!="nulo"){
                return true;    
            }
        }
    </script>

    <%- include('includes/footer.ejs') %>